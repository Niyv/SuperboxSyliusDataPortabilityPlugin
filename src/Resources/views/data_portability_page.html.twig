{% extends '@SyliusShop/layout.html.twig' %}

{% form_theme form '@SyliusUi/Form/theme.html.twig' %}

{% block content %}
    <div class="ui hidden divider"></div>
    <div class="ui two column centered grid">
        <div class="column">
            <h1 class="ui header">
                <i class="circular file alternate icon"></i>
                <div class="content">
                    {{ 'superbox.data_portability.ui.request_data'|trans }}
                    <div class="sub header"> {{ 'superbox.data_portability.ui.request_a_copy_of_your_personal_data_by_filling_in_your_email' | trans }}</div>
                </div>
            </h1>
            <div class="ui segment">
                {{ form_start(form, {'attr': {'class': 'ui large loadable form', 'novalidate': 'novalidate'}}) }}
                {{ form_row(form.email) }}

                {{ form_row(form._token) }}

                {{ form_row(form.send, {'label': 'sylius.ui.send'|trans , 'attr':{'class': 'ui fluid large primary submit button'}}) }}

                {{ form_end(form, {'render_rest': false}) }}
            </div>
        </div>
    </div>
{% endblock %}
